<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itniuma.mapper.MessagesMapper">

    <insert id="addMessage">
        insert into messages(username,content,created_time) values(#{username},#{content},#{createdTime})
    </insert>
    <update id="updateMessage">
        update messages set username=#{username},content=#{content},created_time=#{createdTime} where id=#{id}
    </update>
    <delete id="deleteMessage">
        delete from messages where id=#{id}
    </delete>
    <select id="listAll" resultType="java.lang.Boolean">
        select * from messages
    </select>
    <select id="detail" resultType="com.itniuma.pojo.Messages">
        select * from messages where id=#{id}
    </select>
</mapper>
